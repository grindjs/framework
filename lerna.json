{
  "version": "0.8.0",
  "command": {
    "version": {
      "message": "chore(release): %s",
      "conventionalCommits": true,
      "createRelease": "github"
    },
    "publish": {
      "ignoreChanges": ["*.md", "*.markdown", "starters/", "site/"]
    }
  },
  "packages": ["packages/*", "starters/*", "site"],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"]
}
