{
  "version": "0.8.6",
  "command": {
    "version": {
      "message": "chore(release): %s",
      "conventionalCommits": true,
      "createRelease": "github"
    },
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.markdown",
        "starters/",
        "site/"
      ]
    }
  },
  "packages": [
    "packages/*",
    "meta/*",
    "starters/*",
    "site"
  ],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ]
}
